<div class="container">
  <div class="row">
    <div class="col-md-6">
      <div class="card mb-5 mt-5">
        <div class="card-body">
          <div class="list-group mb-1">
            <a href="#" class="list-group-item list-group-item-action">
              <img src="{{diary.imageUrl}}" alt="text" width="300" height="250" />
              <h5 class="card-title">{{diary.user.name}}</h5>
            </a>
          </div>
          <p class="card-text">{{diary.text}}</p>
          <p class="card-text">{{diary.createdAt}}</p>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <div class="card-body">
        {{#if errorMessage}}
                    <div class="alert -alert-danger" role="alert">
                        {{errorMessage}}
                    </div>
        <form 
          action="/diary/comment/{{diary.id}}"
          method="post"
          enctype="application/x-www-form-urlencoded"
        >
          <div class="mb-3">
            <label for="textarea" class="form-label">Add comment</label>
            <textarea
              class="form-control"
              id="textarea"
              name="comment"
              rows="4"
            ></textarea>
          </div>
                        <input type="hidden" name="_csrf" value="{{csrfToken}}">

          <button type="submit" class="btn btn-primary">Add</button>
        </form>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8">
      <div class="card mb-3" style="max-width: 540px;">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="..." class="img-fluid rounded-start" alt="..." />
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title">Card title</h5>
              <p class="card-text">This is a wider card with supporting text
                below as a natural lead-in to additional content. This content
                is a little bit longer.</p>
              <p class="card-text"><small class="text-muted">Last updated 3 mins
                  ago</small></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>