<div class="container mt-5">
  <div class="row">
    <div class="col-md-6">
      {{#if errorMessage}}
        <div class="alert alert-danger">
          {{errorMessage}}
        </div>
      {{/if}}
      <form action="/auth/registration" method="post">
        <div class="mb-3">
          <label for="email" class="form-label">Email</label>
          <input type="email" name="email" class="form-control" id="email" value="{{oldInput.email}}" />
        </div>
        <div class="mb-3">
          <label for="name" class="form-label">Name</label>
          <input type="text" name="name" class="form-control" id="name"value="{{oldInput.name}}" />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            name="password"
            class="form-control"
            id="password"
            value="{{oldInput.password}}"
          />
        </div>
        <div class="mb-3">
          <label for="password2" class="form-label">Repeat password</label>
          <input
            type="password"
            name="password2"
            class="form-control"
            id="password2"
            value="{{oldInput.password2}}"
          />
        </div>
        <input type="hidden" name="_csrf" value="{{csrfToken}}" />
        <button type="submit" class="btn btn-primary">Register</button>
      </form>
    </div>
  </div>
</div>