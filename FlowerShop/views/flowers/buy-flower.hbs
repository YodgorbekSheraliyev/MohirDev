<div class="single-wrapper">
  <div class="detail-wrapper">
    <img src="{{flower.image}}" class="card-img-top" alt="..." />
    <div class="single-detail">
      <h5 class="detail-title"> {{flower.title}} </h5>
      <p class="detail-text"> {{flower.description}} </p>
      <p class="detail-text"><b>Mavjud:</b> {{flower.amount}} dona </p>
      <p class="detail-text"><b>Price:</b> {{flower.price}} so'm</p>
      <p class="single-card-text-date">
          {{moment flower.createdAt "D.MM.YYYY"}}
     </p>
    </div>

  </div>
  <form action="/flowers/buy/{{flower.id}}" class="buy-form" method="post" enctype="application/x-www-form-urlencoded">
  {{!-- {{#if error}} --}}
  <h1 class="error-message">{{error}} Fullname, Phone number and regions must be filled </h1>
  {{!-- {{/if}} --}}
    <label for="fullName">Fullname</label>
    <input
      type="text"
      name="fullName"
      id="fullName"
      placeholder="John Doe"
    />
     <label for="fullName">Phone</label>
    <input
      type="phone"
      name="phoneNumber"
      id="phoneNumber"
      value="+998"
    />
    <label for="region">Region</label>
    <select name="region" id="region">
      <option value="Andijan">Andijan</option>
      <option value="Buxoro">Buxoro</option>
      <option value="Fergana">Fergana</option>
      <option value="Jizzax">Jizzax</option>
      <option value="Namangan">Namangan</option>
      <option value="Navoiy">Navoiy</option>
      <option value="Qashqadaryo">Qashqadaryo</option>
      <option value="Samarqand">Samarqand</option>
      <option value="Sirdaryo">Sirdaryo</option>
      <option value="Surxondaryo">Surxondaryo</option>
      <option value="Tashkent">Tashkent</option>
      <option value="Xorazm">Xorazm</option>
    </select>
    <button type="submit" class="buy-btn">Buy</button>
  </form>
</div>